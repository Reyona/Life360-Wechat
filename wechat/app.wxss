/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/**全局字体样式**/
page{
 font-family:  Microsoft YaHei;
 background-color:#FFFFF3;
}

input{
  color:#000;
  height: 30px;
  border-radius: 3px;
}
/**按钮的样式**/
button{
font-family:  Microsoft YaHei;
height:82rpx;
border:1px solid #ebebeb;
line-height:82rpx;
background-color:#50c5b7;
color:#ffffff;
}


/**标题样式**/
.msg-title{
  font-size: 14 px;
  font-weight: bold;
  font-family:  Microsoft YaHei;
}
/**正文内容样式**/
.msg-content{
  font-size: 14 px;
  font-family:  Microsoft YaHei;
}

/**时间格式，默认向右下角放**/
.date-time-str{
color : #D0D0D0;
margin-top:8px;
text-align:right;
margin-bottom:8px;
font-size:12px;
margin-right:5px;
font-family:  Microsoft YaHei;
}

/** 添加按钮（+） **/
.addComplaint-img {
    float: right;
    background-color: #ffffff;
    position: fixed;
    bottom: 0rpx;
    right: 0rpx;
    z-index: 0;
    border: 0 solid #ffffff;
    border-radius: 50px;
    box-shadow: 3px 1px 1px #cccccc;
    margin: 32rpx;
    width: 70rpx;
    height: 70rpx;
}


