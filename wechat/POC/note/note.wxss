.box-body-comp {
    float: left;
    perspective: 1000px;
    transform: rotate(-2deg);
}

.box-note-comp {
    margin-top: 21px;
    margin-left: 11px;
}

.box-note-body-comp {
    transform-style: preserve-3d;
    transition: all .5s ease-in-out;
    background: #F7E999;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
    color: #777;
}

.note-title {
    text-align: center;
}

.note-block {
    display: flex;
    flex-direction: row;
    margin: 10rpx;
    font-size: .7em;
}

.note-block-item {
    flex: 1;
    text-align: center;
}

.join-btn {
    height: 80rpx;
    width: 80rpx;
    border-radius: 50%;
    line-height: 80rpx;
    color: #fff;
    background-color: #2baf2b;
    border: 2px solid green;
}

.note-arrow {
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 10rpx 10rpx 0 10rpx;
    border-color: #777777 transparent transparent transparent;
    margin: 20rpx auto;
}

.filter-panel {
    background: #fff;
    border-bottom: 1px solid #eee;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 10rpx;
    font-size: .8em;
    color: #777;
    line-height: 1.5;
}

.filter-panel-date {
    flex: 1;
}

.filter-panel-join {
    flex: 1;
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
}
